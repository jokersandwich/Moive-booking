/* pages/check/check.wxss */

.container {
  position: absolute;
  background-color: #fefefe;
  width: 100%;
  height: 100%;
}

.info {
  margin: 0 48rpx;
  font-size: 24rpx;
  box-sizing: border-box;
}

.info-row {
  margin-bottom: 32rpx;
}

.col {
  display: inline-block;
}

.col-4 {
  width: 40%;
}

.col-3 {
  width: 30%;
}

.col-7 {
  width: 70%;
}

.info-label {
  color: #aaa;
}

.info-text {
  color: #3d3bee;
}

.bar-code {
  text-align: center;
}

.bar-code image {
  margin-top: 16rpx;
  margin-bottom: 64rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 108rpx;
  background: #3d3bee;
  line-height: 108rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}

.icon-finger-print {
  position: relative;
  bottom: 4rpx;
  margin-right: 32rpx;
  color: #72c8a0;
  vertical-align: middle;
  font-size: 64rpx;
}