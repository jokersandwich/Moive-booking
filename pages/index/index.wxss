/**index.wxss**/

.container {
  background-color: #fefefe;
}

.genres-list-btn {
  margin: 32rpx 20rpx 100rpx;
  display: inline-block;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
  width: 180rpx;
  box-shadow: 0 8rpx 64rpx 0 rgba(0,0,0,0.04);
  background-color: #fff;
  color: #656589;
  font-size: 28rpx;
}

.genres-list-btn-active {
  background-color: #3d3bee;
  box-shadow: 0 16rpx 64rpx 0 rgba(61,59,238,0.36);
  color: #fff;
}

.wrap {
  position: relative;
  padding: 0 32rpx 48rpx;
}

.data-list {
  margin-top: 24rpx;
  display: flex;
  justify-content: space-between;
}

.week {
  margin-bottom: 16rpx;
  font-size: 20rpx;
  color: #aaa;
  text-align: center;
}

.date {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 24rpx;
}

.date-active {
  background: #f8a311;
  border-radius: 50%;
  box-shadow: 0 8rpx 32rpx 0 rgba(248,163,17,0.2);
  color: #fff;
}

.theater {
  margin-top: 48rpx;
}

.theater-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.icon-left, .icon-right {
  padding: 0 16rpx;
  font-size: 28rpx;
  line-height: 2;
  color: #aaa;
}

.theater-name {
  font-size: 32rpx;
}

.time-list {
  margin-top: 24rpx;
  display: flex;
  flex-wrap: wrap;
}

.time {
  margin: 12rpx;
  width: 130rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  line-height: 2.8;
  text-align: center;
  font-size: 20rpx;
}

.time-active {
  background: #f8a311;
  color: #fff;
  box-shadow: 0 8rpx 32rpx 0 rgba(248,163,17,0.2);
}

.icon-clapper-board {
  position: absolute;
  right: 48rpx;
  bottom: 0;
  transform: translate(0, 50%);
  padding: 28rpx;
  border-radius: 50%;
  background: #3d3bee;
  box-shadow: 0 16rpx 64rpx 0 rgba(61,59,238,0.36);
  color: #fff;
  font-size: 32rpx;
}