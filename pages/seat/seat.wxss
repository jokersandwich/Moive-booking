/* pages/seat/seat.wxss */

.header {
  position: relative;
  width: 100%;
  height: 24vh;
  background: #eee no-repeat fixed top;
  background-size: 100%;
}

.title {
  position: absolute;
  bottom: 24rpx;
  padding: 0 48rpx;
  color: #fff;
  font-size: 44rpx;
  letter-spacing: 2rpx;
}

.icon-write2 {
  position: absolute;
  right: 48rpx;
  bottom: 0;
  transform: translate(0, 50%);
  padding: 28rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0 16rpx 64rpx 0 rgba(0,0,0,0.5);
  color: #3d3bee;
  font-size: 32rpx;
}

.main {
  background: #3d3bee;
  min-height: 76vh;
}

.info {
  margin-bottom: 64rpx;
  padding: 32rpx 48rpx 0;
  color: #fff;
  font-size: 26rpx;
}

.theater {
  margin-bottom: 24rpx;
}

.cutline {
  padding: 0 48rpx;
  color: #fff;
  font-size: 22rpx;
  display: flex;
  justify-content: space-around;
}

.cutline-item {
  display: flex;
  align-items: center;
}

.dot {
  margin-right: 24rpx;
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  background: #7776f3;
  border-radius: 50%;
}

.dot-blue {
  background-color: #1311a3;
}

.dot-gray {
  width: 20rpx;
  height: 20rpx;
}

.dot-orange {
  background-color: #f8a311;
}

.screen {
  margin: 64rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.screen-shape {
  margin-bottom: 24rpx;
  width: 80%;
  height: 10rpx;
  background: #fff;
  border-radius: 5rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(255,255,255,0.8);
}

.screen-text {
  color: #7776f3;
  font-size: 24rpx;
  letter-spacing: 16rpx;
}